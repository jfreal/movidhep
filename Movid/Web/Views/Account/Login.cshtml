@model Movid.App.Models.LoginModel

@{
    ViewBag.Title = "Login to Your Account";
}


<h3>Login</h3>
<p>
    Login to your account.
</p>


<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new {@class="form-horizontal"})) {

            <div class="form-group">
                <label class="control-label col-lg-2">Email</label>
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Email, new {@class="form-control"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
    
            <div class="form-group">
                <label class="control-label col-lg-2">Password</label>
                <div class="col-lg-4">
                    @Html.PasswordFor(m => m.Password, new {@class="form-control"})
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
    
            <div class="form-group">
                <label class="control-label col-lg-2"></label>
                <div class="col-lg-4">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-2"></label>
                <div class="col-lg-4">
                    @Html.ActionLink("Forgot your password?", "Forgot", "Account")
                </div>
            </div>
    
            @Html.AntiForgeryToken()
            <input type="submit" value="Login" class="btn btn-blue btn-lg fifteen-margin-top" />
        }
    </div>
</div>







