@model Movid.App.Controllers.AccountAdministrationViewModel
@{
    ViewBag.Title = "Account";
}

<h2>Account</h2>

<table>
    <tr>
        <td>Created</td>
        <td>@Model.Account.CreatedDate</td>
    </tr>
    <tr>
        <td>Last Master Push</td>
        <td>@Model.Account.LastMasterPush</td>
    </tr>
</table>

<h3>Users</h3>
<table class="table table-bordered">
    <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Last Login</th>
    </tr>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.LastLogin</td>
            </tr>
        }
    </tbody>
</table>

<h3>Clinics</h3>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Address</th>
    </tr>
    <tbody>
        @foreach (var user in Model.Clinics)
        {
            <td>@user.Email</td>
            <td>@user.Address</td>
        }
    </tbody>
</table>

<h3>Exercises</h3>
<ul>
    @foreach (var exer in Model.Exercises)
    {
        <li>@exer.Name </li>
    }
</ul>