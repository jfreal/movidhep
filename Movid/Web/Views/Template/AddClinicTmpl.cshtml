@{
    Layout = null;
}
<h3>Add a Clinic</h3>
<div class="row">
    <div class="col-sm-12">
        <form role="form" name="newClinicForm">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" ng-model="newClinic.name" placeholder="name">
            </div>            
            <div class="btn-group">
                <a href="#/" class="btn btn-blue">Cancel</a>
                <input type="submit" class="btn btn-blue" ng-disabled="!newClinicForm.$valid" ng-click="addClinic()" value="Add Clinic"></input>
            </div>
        </form>
</div>
</div>